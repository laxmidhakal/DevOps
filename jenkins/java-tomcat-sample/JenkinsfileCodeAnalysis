pipeline {
    agent any
    environment {
        scannerHome = tool 'sonar6.1'
    }
    stages {

        stage('Build') {
            steps {
                sh 'mvn -f jenkins/java-tomcat-sample/pom.xml install -DskipTests'
            }
            post {
                success {
                    echo 'Now Archiving it...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage('UNIT TEST') {
            steps {
                sh 'mvn -f jenkins/java-tomcat-sample/pom.xml test'
            }
        }
}
}
